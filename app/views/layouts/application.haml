%html
  %head
    %title= [@title, "Co-Squared"].compact.join(" | ")
    = stylesheet_link_tag 'reset', 'application',
    #= javascript_include_tag 'jquery', 'application'
    = yield_content :include
  %body
    #header
      %h1 Co Squared
      %ul.menu
        %li= link_to 'Blog', url_for(:posts, :index)
        %li= link_to 'About', url_for(:about)
    #container
      #main= yield
      #sidebar
        - form_tag url_for(:posts, :index), :method => 'get' do
          Search for:
          = text_field_tag 'query', :value => params[:query]
          = submit_tag 'Search'
        %p Recent Posts
        %ul.bulleted
          %li Item 1
          %li Item 2
        %p Categories
        %ul.bulleted
          %li Cat 1
          %li Cat 2
    #footer
      Copyright (c) 2011 mochify
